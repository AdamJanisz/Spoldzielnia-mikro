<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN" "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">

<tiles-definitions>

    <definition name="base.definition"
                template="/WEB-INF/jsp/layout.jsp">
        <put-attribute name="body" value="/WEB-INF/jsp/main.jsp"/>
        <put-attribute name="header" value="/WEB-INF/jsp/header.jsp" />


    </definition>

    <definition name="mainBody" extends="base.definition">
        <put-attribute name="title" value="MainBody" />
        <put-attribute name="body" value="/WEB-INF/jsp/mainBody.jsp" />
    </definition>

    <definition name="2body" extends="base.definition">
        <put-attribute name="title" value="MainBody" />
        <put-attribute name="body" value="/WEB-INF/jsp/2body.jsp" />
    </definition>


</tiles-definitions>



